package controlflow;

public class Interview16 {

	public static void main(String[] args) {
		int n = 5;
		 
	       for(int i=1; i<=n; i++) {
	           //spaces
	           for(int j=1; j<=n-i; j++) {
	               System.out.print(" ");
	           }
	 
	           //row numbers, row numbers of times
	           for(int j=1; j<=i; j++) {
	               System.out.print(i+" ");
	           }
	           System.out.println();
	       }
	   }   

	}
int n=5;
for(int r=1; r<=n; r++)
{
	//spaces
	for(int j=1; j<=n-r; j++)
		System.out.print(" ");
} 
//1st half numbers
for(int j=r; j>=1; j--)
{
	System.out.print(j);
}
//2nd part
for(int j=2; j<=r; j++)
{
	System.out.print(j);
}
System.out.println();

}
 

